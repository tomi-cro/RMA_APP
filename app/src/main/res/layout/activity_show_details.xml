<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShowDetails">

        <ImageView
            android:id="@+id/showDetailCover"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="20dp"/>

        <TextView
            android:id="@+id/titlePlaceholder"
            android:text="Title: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/showDetailCover"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="8dp"
            />
        <TextView
            android:id="@+id/showDetailTitle"
            android:text="Tv show name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/showDetailCover"
            app:layout_constraintLeft_toRightOf="@id/titlePlaceholder"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/summaryPlaceholder"
            android:text="Summary: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/showDetailTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="8dp"
            />
        <TextView
            android:id="@+id/showDetailSummary"
            android:text="Long summary of tv showkjashbdf lkabsdlkkjglk "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/showDetailTitle"
            app:layout_constraintLeft_toRightOf="@id/summaryPlaceholder"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/premieredPlaceholder"
            android:text="Premiered: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/showDetailSummary"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="8dp"
            />
        <TextView
            android:id="@+id/showDetailPremiered"
            android:text="Long summary of tv showkjashbdf lkabsdlkkjglk "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/showDetailSummary"
            app:layout_constraintLeft_toRightOf="@id/summaryPlaceholder"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/statusPlaceholder"
            android:text="Status: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/showDetailPremiered"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="8dp"
            />
        <TextView
            android:id="@+id/showDetailStatus"
            android:text="Long summary of tv showkjashbdf lkabsdlkkjglk "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/showDetailPremiered"
            app:layout_constraintLeft_toRightOf="@id/statusPlaceholder"
            android:padding="8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>